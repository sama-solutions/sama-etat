{
  "name": "arbase",
  "version": "1.0.0",
  "description": "Solution de réalité augmentée pour cartes de visite et affiches",
  "main": "index.js",
  "scripts": {
    "install-all": "npm run install-backend && npm run install-frontend && npm run install-admin",
    "install-backend": "cd backend && npm install",
    "install-frontend": "cd frontend && npm install", 
    "install-admin": "cd admin-panel-simple && npm install",
    "install-backend-deps": "cd backend && npm install qrcode",
    "generate-assets": "./generate-demo-assets.sh",
    "test-platform": "./test-platform.sh",
    "production": "./start-production.sh",
    "start": "concurrently \"npm run start-backend\" \"npm run start-frontend\" \"npm run start-admin\"",
    "start-backend": "cd backend && npm start",
    "start-frontend": "cd frontend && npm start",
    "start-admin": "cd admin-panel-simple && npm start",
    "dev": "concurrently \"npm run dev-backend\" \"npm run dev-frontend\" \"npm run dev-admin\"",
    "dev-backend": "cd backend && npm run dev",
    "dev-frontend": "cd frontend && npm run dev",
    "dev-admin": "cd admin-panel-simple && npm start",
    "build": "npm run build-frontend && npm run build-admin",
    "build-frontend": "cd frontend && npm run build",
    "build-admin": "cd admin-panel && npm run build",
    "test": "npm run test-backend && npm run test-frontend",
    "test-backend": "cd backend && npm test",
    "test-frontend": "cd frontend && npm test"
  },
  "keywords": [
    "augmented-reality",
    "ar",
    "business-cards",
    "posters",
    "webxr",
    "three.js",
    "ar.js"
  ],
  "author": "ARBase Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}