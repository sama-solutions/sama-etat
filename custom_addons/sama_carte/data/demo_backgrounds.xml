<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Background de démonstration 1 : Corporate Bleu -->
        <record id="demo_background_corporate" model="membership.card.background">
            <field name="name">Corporate Bleu</field>
            <field name="technical_name">corporate_blue</field>
            <field name="description">Background corporate avec dégradé bleu professionnel</field>
            <field name="category">corporate</field>
            <field name="sequence">1</field>
            <field name="is_premium" eval="False"/>
            <!-- Images encodées en base64 - dégradés simples pour la démonstration -->
            <field name="image_portrait">iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNkYPhfDwAChwGA60e6kgAAAABJRU5ErkJggg==</field>
            <field name="image_landscape">iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNkYPhfDwAChwGA60e6kgAAAABJRU5ErkJggg==</field>
        </record>

        <!-- Background de démonstration 2 : Nature Vert -->
        <record id="demo_background_nature" model="membership.card.background">
            <field name="name">Nature Vert</field>
            <field name="technical_name">nature_green</field>
            <field name="description">Background nature avec tons verts apaisants</field>
            <field name="category">nature</field>
            <field name="sequence">2</field>
            <field name="is_premium" eval="False"/>
            <field name="image_portrait">iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNkYPhfDwAChwGA60e6kgAAAABJRU5ErkJggg==</field>
            <field name="image_landscape">iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNkYPhfDwAChwGA60e6kgAAAABJRU5ErkJggg==</field>
        </record>

        <!-- Background de démonstration 3 : Abstrait Moderne -->
        <record id="demo_background_abstract" model="membership.card.background">
            <field name="name">Abstrait Moderne</field>
            <field name="technical_name">abstract_modern</field>
            <field name="description">Background abstrait avec formes géométriques modernes</field>
            <field name="category">abstract</field>
            <field name="sequence">3</field>
            <field name="is_premium" eval="True"/>
            <field name="image_portrait">iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNkYPhfDwAChwGA60e6kgAAAABJRU5ErkJggg==</field>
            <field name="image_landscape">iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNkYPhfDwAChwGA60e6kgAAAABJRU5ErkJggg==</field>
        </record>

        <!-- Configurer la société SAMA avec un background par défaut -->
        <function model="res.company" name="_configure_sama_background">
            <value eval="env.ref('sama_carte.sama_company').write({
                'card_background_id': ref('demo_background_corporate'),
                'card_background_orientation': 'landscape'
            })"/>
        </function>
    </data>
</odoo>