<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Société SAMA pour les tests -->
        <record id="company_sama" model="res.company">
            <field name="name">SAMA - Société d'Assistance et de Management Africain</field>
            <field name="street">Avenue Léopold Sédar Senghor</field>
            <field name="street2">Plateau, Dakar</field>
            <field name="city">Dakar</field>
            <field name="zip">12500</field>
            <field name="country_id" ref="base.sn"/>
            <field name="phone">+221 33 123 45 67</field>
            <field name="email">contact@sama.sn</field>
            <field name="website">https://www.sama.sn</field>
            <field name="vat">SN123456789</field>
            
            <!-- Personnalisation des cartes -->
            <field name="primary_color">#004a99</field>
            <field name="secondary_color">#f7f32d</field>
            <field name="text_color">#333333</field>
