        <!-- Template 1: Moderne & Épuré -->
        <record id="template_modern" model="membership.card.template">
            <field name="name">Moderne &amp; Épuré</field>
            <field name="technical_name">modern</field>
            <field name="description">Design moderne avec lignes épurées et couleurs douces. Parfait pour les organisations contemporaines.</field>
            <field name="category">modern</field>
            <field name="sequence">1</field>
            <field name="is_premium" eval="False"/>
            <field name="default_primary_color">#004a99</field>
            <field name="default_secondary_color">#f8f9fa</field>
            <field name="default_text_color">#212529</field>
        </record>

