<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Rapport ultra-simple pour test -->
    <record id="action_report_template_ultra_simple" model="ir.actions.report">
        <field name="name">Test Ultra Simple</field>
        <field name="model">membership.card.template</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sama_carte.report_template_ultra_simple_template</field>
        <field name="report_file">sama_carte.report_template_ultra_simple_template</field>
        <field name="print_report_name">'Test - %s' % (object.name)</field>
        <field name="paperformat_id" ref="sama_carte.paperformat_member_card_landscape"/>
    </record>

    <!-- Template ultra-simple -->
    <template id="report_template_ultra_simple_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="template">
                <div class="page">
                    <style>
                        .test-card {
                            width: 100%;
                            height: 100%;
                            background: linear-gradient(45deg, #004a99, #f7f32d);
                            padding: 20px;
                            color: white;
                            font-family: Arial, sans-serif;
                            display: flex;
                            flex-direction: column;
                            justify-content: center;
                            align-items: center;
                            text-align: center;
                        }
                        .test-title {
                            font-size: 24px;
                            font-weight: bold;
                            margin-bottom: 20px;
                        }
                        .test-content {
                            font-size: 16px;
                            line-height: 1.5;
                        }
                    </style>
                    
                    <div class="test-card">
                        <div class="test-title">
                            CARTE DE MEMBRE
                        </div>
                        <div class="test-content">
                            <p>Template: <span t-esc="template.name"/></p>
                            <p>Format: PAYSAGE 85x55mm</p>
                            <p>Test: CONTENU VISIBLE</p>
                            <p>Background: DÉGRADÉ BLEU-JAUNE</p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>