<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Rapport fonctionnel pour les templates avec background -->
    <record id="action_report_template_working" model="ir.actions.report">
        <field name="name">Template avec Background (Fonctionnel)</field>
        <field name="model">membership.card.template</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sama_carte.report_template_working_template</field>
        <field name="report_file">sama_carte.report_template_working_template</field>
        <field name="print_report_name">'Carte-Template'</field>
        <field name="paperformat_id" ref="sama_carte.paperformat_member_card_landscape"/>
    </record>

    <!-- Template fonctionnel -->
    <template id="report_template_working_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="template">
                <div class="page">
                    <style>
                        body {
                            margin: 0;
                            padding: 0;
                            font-family: Arial, sans-serif;
                        }
                        
                        .card-container {
                            width: 100%;
                            height: 100%;
                            position: relative;
                            overflow: hidden;
                            background: linear-gradient(135deg, #004a99, #f7f32d);
                            border-radius: 10px;
                        }
                        
                        .card-overlay {
                            position: absolute;
                            top: 0;
                            left: 0;
                            right: 0;
                            bottom: 0;
                            background: rgba(0,0,0,0.2);
                            border-radius: 10px;
                        }
                        
                        .card-content {
                            position: relative;
                            z-index: 10;
                            height: 100%;
                            padding: 15px;
                            color: white;
                            display: flex;
                            flex-direction: column;
                            justify-content: space-between;
                        }
                        
                        .card-header {
                            display: flex;
                            justify-content: space-between;
                            align-items: center;
                            margin-bottom: 10px;
                        }
                        
                        .card-title {
                            text-align: center;
                            font-weight: bold;
                            font-size: 14px;
                            text-shadow: 1px 1px 2px rgba(0,0,0,0.7);
                        }
                        
                        .card-info {
                            background: rgba(255,255,255,0.95);
                            border-radius: 8px;
                            padding: 15px;
                            text-align: center;
                            color: #004a99;
                        }
                        
                        .member-name {
                            font-size: 16px;
                            font-weight: bold;
                            margin-bottom: 8px;
                        }
                        
                        .member-number {
                            font-size: 12px;
                            background: #f7f32d;
                            color: #333;
                            padding: 6px 12px;
                            border-radius: 15px;
                            display: inline-block;
                            font-weight: bold;
                        }
                        
                        .template-badge {
                            position: absolute;
                            top: 8px;
                            left: 8px;
                            background: #004a99;
                            color: white;
                            padding: 4px 8px;
                            border-radius: 10px;
                            font-size: 8px;
                            font-weight: bold;
                            z-index: 20;
                        }
                        
                        .photo-placeholder {
                            width: 60px;
                            height: 60px;
                            border-radius: 50%;
                            background: #f0f0f0;
                            border: 2px solid #004a99;
                            margin: 0 auto 10px;
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            font-size: 10px;
                            color: #666;
                        }
                    </style>
                    
                    <div class="card-container">
                        <div class="card-overlay"></div>
                        
                        <div class="template-badge">
                            <t t-esc="template.name or 'Template'"/>
                        </div>
                        
                        <div class="card-content">
                            <div class="card-header">
                                <div style="font-size: 10px;">LOGO</div>
                                <div class="card-title">CARTE DE MEMBRE</div>
                                <div style="font-size: 10px;">QR</div>
                            </div>
                            
                            <div class="card-info">
                                <div class="photo-placeholder">
                                    PHOTO
                                </div>
                                
                                <div class="member-name">
                                    Jean Dupont
                                </div>
                                
                                <div class="member-number">
                                    SN-MBR-00001
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- VERSO -->
                <div class="page" style="page-break-before: always;">
                    <style>
                        .verso-container {
                            height: 100%;
                            border-radius: 10px;
                            background: linear-gradient(135deg, #f7f32d, #004a99);
                            position: relative;
                            overflow: hidden;
                        }
                        
                        .verso-overlay {
                            position: absolute;
                            top: 0;
                            left: 0;
                            right: 0;
                            bottom: 0;
                            background: rgba(255,255,255,0.9);
                            border-radius: 10px;
                        }
                        
                        .verso-content {
                            position: relative;
                            z-index: 10;
                            height: 100%;
                            padding: 20px;
                            display: flex;
                            flex-direction: column;
                            justify-content: space-between;
                        }
                        
                        .verso-header {
                            text-align: center;
                            font-size: 12px;
                            font-weight: bold;
                            color: #004a99;
                            margin-bottom: 15px;
                        }
                        
                        .verso-terms {
                            font-size: 10px;
                            line-height: 1.4;
                            text-align: justify;
                            color: #333;
                            flex: 1;
                        }
                        
                        .verso-footer {
                            text-align: center;
                            font-weight: bold;
                            color: #004a99;
                            border-top: 2px solid #004a99;
                            padding-top: 10px;
                            margin-top: 15px;
                        }
                    </style>
                    
                    <div class="verso-container">
                        <div class="verso-overlay"></div>
                        
                        <div class="verso-content">
                            <div>
                                <div class="verso-header">
                                    CONDITIONS D'UTILISATION
                                </div>
                                <div class="verso-terms">
                                    Cette carte est personnelle, non transférable et reste la propriété de l'organisation. 
                                    Elle doit être restituée sur demande. L'utilisation de cette carte est soumise aux 
                                    conditions générales de l'organisation.
                                </div>
                            </div>
                            
                            <div class="verso-footer">
                                <div>Expire le: 31/12/2024</div>
                                <div style="font-size: 8px; color: #666; margin-top: 8px;">
                                    Template: <t t-esc="template.name or 'Inconnu'"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>