# =============================================================================
# SAMA CONAI - Configuration Environment
# =============================================================================
# Fichier de configuration pour personnaliser les paramètres de démarrage
# =============================================================================

# Chemins des applications
ODOO_PATH="/var/odoo/odoo18"
ADDONS_PATH="/home/grand-as/psagsn/custom_addons"

# Configuration de la base de données
DB_NAME="sama_conai_analytics"

# Ports des services
ODOO_PORT="8077"
MOBILE_PORT="3005"

# Configuration des logs
LOG_LEVEL="info"

# Timeouts (en secondes)
STARTUP_TIMEOUT="60"
SHUTDOWN_TIMEOUT="10"

# Options Odoo
ODOO_WORKERS="0"
ODOO_MAX_CRON_THREADS="2"

# Configuration de l'application mobile
MOBILE_ENV="production"

# URLs externes (si différentes de localhost)
# ODOO_URL="http://localhost:8077"
# MOBILE_URL="http://localhost:3005"