<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        
        <record id="view_project_public_location_departement_form" model="ir.ui.view">
            <field name="name">project.public.location.departement.form</field>
            <field name="model">project.public.location.departement</field>
            <field name="arch" type="xml">
                <form string="Département">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="region_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        
        <record id="view_project_public_location_departement_tree" model="ir.ui.view">
            <field name="name">project.public.location.departement.list</field>
            <field name="model">project.public.location.departement</field>
            <field name="arch" type="xml">
                <list string="Départements">
                    <field name="name" />
                    <field name="code" />
                    <field name="region_id" />
                </list>
            </field>
        </record>

        
        <record id="project_public_location_departement_action" model="ir.actions.act_window">
            <field name="name">Départements</field>
            <field name="res_model">project.public.location.departement</field>
            <field name="view_mode">list,form</field>
        </record>

        
        <record id="view_project_public_location_commune_form" model="ir.ui.view">
            <field name="name">project.public.location.commune.form</field>
            <field name="model">project.public.location.commune</field>
            <field name="arch" type="xml">
                <form string="Commune">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="departement_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        
        <record id="view_project_public_location_commune_tree" model="ir.ui.view">
            <field name="name">project.public.location.commune.list</field>
            <field name="model">project.public.location.commune</field>
            <field name="arch" type="xml">
                <list string="Communes">
                    <field name="name" />
                    <field name="departement_id" />
                </list>
            </field>
        </record>

        
        <record id="project_public_location_commune_action" model="ir.actions.act_window">
            <field name="name">Communes</field>
            <field name="res_model">project.public.location.commune</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>