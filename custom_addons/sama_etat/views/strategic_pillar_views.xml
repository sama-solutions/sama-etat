<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Strategic Pillar Tree View -->
        <record id="strategic_pillar_view_tree" model="ir.ui.view">
            <field name="name">strategic.pillar.tree</field>
            <field name="model">strategic.pillar</field>
                        <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Piliers Stratégiques">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="plan_id"/>
                </list>
            </field>
        </record>

        <!-- Strategic Pillar Form View -->
        <record id="strategic_pillar_view_form" model="ir.ui.view">
            <field name="name">strategic.pillar.form</field>
            <field name="model">strategic.pillar</field>
            <field name="arch" type="xml">
                <form string="Pilier Stratégique">
                    <header>
                        <button name="action_set_to_draft" type="object" string="Modifier" class="oe_highlight" invisible="state == 'draft'"/>
                        <button name="action_set_to_locked" type="object" string="Sauvegarder" class="oe_highlight" invisible="state == 'locked'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,locked"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="plan_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                            <page string="Axes">
                                <field name="axis_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Strategic Pillar Action Window -->
        <record id="strategic_pillar_action" model="ir.actions.act_window">
            <field name="name">Piliers Stratégiques</field>
            <field name="res_model">strategic.pillar</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>