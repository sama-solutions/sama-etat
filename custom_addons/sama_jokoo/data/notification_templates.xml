        <!-- Templates de notifications par email -->
        
        <!-- Template pour les likes -->
        <record id="email_template_social_like" model="mail.template">
            <field name="name">Social: Nouveau like</field>
            <field name="model_id" ref="model_social_notification"/>
            <field name="subject">{{ object.author_id.name }} a aim√© votre post</field>
            <field name="email_from">{{ (object.env.user.email_formatted or user.email_formatted) }}</field>
            <field name="email_to">{{ object.user_id.email }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div style="margin: 0px; padding: 0px; background-color: #f8f9fa;">
                        <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #f8f9fa; font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: #34495e; width: 100%;">
                            <tr>
                                <td align="center">
                                    <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #34495e; border-top: 5px solid #e74c3c;">
                                        <tr>
                                            <td align="center" style="min-height: 590px;">
                                                <div style="text-align: center;">
                                                    <h2 style="color: #e74c3c;">‚ù§Ô∏è Nouveau like !</h2>
                                                    <p style="font-size: 16px;">
                                                        <strong>{{ object.author_id.name }}</strong> a aim√© votre post
                                                    </p>
                                                    <div style="margin: 20px 0; padding: 15px; background-color: #f8f9fa; border-left: 4px solid #e74c3c;">
                                                        <p style="margin: 0; font-style: italic;">
                                                            "{{ object.post_id.content_preview }}"
                                                        </p>
                                                    </div>
                                                    <p>
                                                        <a href="{{ object.action_url }}" style="background-color: #e74c3c; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;">
                                                            Voir le post
                                                        </a>
                                                    </p>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </field>
        </record>

