<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Catégories de sécurité -->
        <record id="module_category_social" model="ir.module.category">
            <field name="name">Social</field>
            <field name="description">Gestion des droits pour l'application sociale</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groupes de sécurité -->
        <record id="group_social_user" model="res.groups">
            <field name="name">Utilisateur Social</field>
            <field name="category_id" ref="module_category_social"/>
            <field name="comment">Peut créer et voir les posts sociaux</field>
        </record>

        <record id="group_social_moderator" model="res.groups">
            <field name="name">Modérateur Social</field>
            <field name="category_id" ref="module_category_social"/>
            <field name="implied_ids" eval="[(4, ref('group_social_user'))]"/>
            <field name="comment">Peut modérer les contenus sociaux</field>
        </record>

        <record id="group_social_admin" model="res.groups">
            <field name="name">Administrateur Social</field>
            <field name="category_id" ref="module_category_social"/>
            <field name="implied_ids" eval="[(4, ref('group_social_moderator'))]"/>
            <field name="comment">Accès complet à l'application sociale</field>
        </record>

        <!-- Ajouter tous les utilisateurs au groupe social par défaut -->
        <record id="base.group_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('group_social_user'))]"/>
        </record>

        <!-- Règles de sécurité désactivées temporairement pour l'installation -->
        <!-- TODO: Réactiver après installation réussie -->

    </data>
</odoo>