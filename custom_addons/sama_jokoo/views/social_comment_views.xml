<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue liste des commentaires sociaux -->
        <record id="view_social_comment_tree" model="ir.ui.view">
            <field name="name">social.comment.tree</field>
            <field name="model">social.comment</field>
            <field name="arch" type="xml">
                <list string="Commentaires Sociaux">
                    <field name="content_preview"/>
                    <field name="author_id"/>
                    <field name="post_id"/>
                    <field name="parent_id" optional="hide"/>
                    <field name="state" decoration-success="state == 'published'" decoration-warning="state == 'moderated'" decoration-danger="state == 'hidden'"/>
                    <field name="like_count"/>
                    <field name="create_date"/>
                    <field name="is_edited" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire des commentaires sociaux -->
        <record id="view_social_comment_form" model="ir.ui.view">
            <field name="name">social.comment.form</field>
            <field name="model">social.comment</field>
            <field name="arch" type="xml">
                <form string="Commentaire Social">
                    <header>
                        <button name="action_hide" string="Masquer" type="object" 
                                class="btn-warning" attrs="{'invisible': [('state', '!=', 'published')]}"/>
                        <button name="action_show" string="Afficher" type="object" 
                                class="btn-success" attrs="{'invisible': [('state', '!=', 'hidden')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="published,moderated,hidden"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_like" type="object" class="oe_stat_button" icon="fa-heart">
                                <field name="like_count" widget="statinfo" string="Likes"/>
                            </button>
                        </div>
                        
                        <group>
                            <group>
                                <field name="author_id" readonly="1"/>
                                <field name="post_id"/>
                                <field name="parent_id" attrs="{'invisible': [('parent_id', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="is_edited" readonly="1"/>
                                <field name="edit_date" readonly="1" attrs="{'invisible': [('is_edited', '=', False)]}"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Contenu">
                                <field name="content" widget="html"/>
                            </page>
                            <page string="Mentions" attrs="{'invisible': [('mention_ids', '=', [])]}">
                                <field name="mention_ids" widget="many2many_tags"/>
                            </page>
                            <page string="R√©ponses" attrs="{'invisible': [('child_ids', '=', [])]}">
                                <field name="child_ids">
                                    <tree>
                                        <field name="content_preview"/>
                                        <field name="author_id"/>
                                        <field name="create_date"/>
                                        <field name="like_count"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue kanban des commentaires sociaux -->
        <record id="view_social_comment_kanban" model="ir.ui.view">
            <field name="name">social.comment.kanban</field>
            <field name="model">social.comment</field>
            <field name="arch" type="xml">
                <kanban class="o_social_comment_kanban">
                    <field name="id"/>
                    <field name="content_preview"/>
                    <field name="author_id"/>
                    <field name="post_id"/>
                    <field name="create_date"/>
                    <field name="like_count"/>
                    <field name="state"/>
                    <field name="is_edited"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="content_preview"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_tags_section">
                                            <span t-if="record.is_edited.raw_value" class="badge badge-pill badge-info">‚úèÔ∏è Modifi√©</span>
                                            <span t-if="record.state.raw_value == 'hidden'" class="badge badge-pill badge-danger">üö´ Masqu√©</span>
                                            <span t-if="record.state.raw_value == 'moderated'" class="badge badge-pill badge-warning">‚ö†Ô∏è Mod√©r√©</span>
                                        </div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span>Par <field name="author_id"/></span><br/>
                                                <span>Sur <field name="post_id"/></span><br/>
                                                <span><field name="create_date" widget="relative"/></span>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <span class="fa fa-heart text-danger"> <field name="like_count"/></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue recherche des commentaires sociaux -->
        <record id="view_social_comment_search" model="ir.ui.view">
            <field name="name">social.comment.search</field>
            <field name="model">social.comment</field>
            <field name="arch" type="xml">
                <search string="Rechercher Commentaires">
                    <field name="content" string="Contenu"/>
                    <field name="author_id" string="Auteur"/>
                    <field name="post_id" string="Post"/>
                    <filter string="Mes Commentaires" name="my_comments" domain="[('author_id', '=', uid)]"/>
                    <filter string="Commentaires Publi√©s" name="published_comments" domain="[('state', '=', 'published')]"/>
                    <filter string="Commentaires Masqu√©s" name="hidden_comments" domain="[('state', '=', 'hidden')]"/>
                    <filter string="Commentaires Modifi√©s" name="edited_comments" domain="[('is_edited', '=', True)]"/>
                    <separator/>
                    <filter string="R√©ponses" name="replies" domain="[('parent_id', '!=', False)]"/>
                    <filter string="Commentaires Principaux" name="main_comments" domain="[('parent_id', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="Auteur" name="group_author" context="{'group_by': 'author_id'}"/>
                        <filter string="Post" name="group_post" context="{'group_by': 'post_id'}"/>
                        <filter string="√âtat" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Date de cr√©ation" name="group_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action pour les commentaires sociaux -->
        <record id="action_social_comment" model="ir.actions.act_window">
            <field name="name">Commentaires Sociaux</field>
            <field name="res_model">social.comment</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_published_comments': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucun commentaire pour le moment !
                </p>
                <p>
                    Les commentaires appara√Ætront ici lorsque les utilisateurs
                    commenceront √† interagir avec les posts sociaux.
                </p>
            </field>
        </record>

    </data>
</odoo>