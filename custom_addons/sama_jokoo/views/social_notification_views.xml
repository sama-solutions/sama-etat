<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue liste des notifications sociales -->
        <record id="view_social_notification_tree" model="ir.ui.view">
            <field name="name">social.notification.tree</field>
            <field name="model">social.notification</field>
            <field name="arch" type="xml">
                <list string="Notifications Sociales" decoration-bf="is_read == False">
                    <field name="title"/>
                    <field name="type"/>
                    <field name="author_id"/>
                    <field name="is_read" widget="boolean_toggle"/>
                    <field name="create_date"/>
                    <field name="read_date" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire des notifications sociales -->
        <record id="view_social_notification_form" model="ir.ui.view">
            <field name="name">social.notification.form</field>
            <field name="model">social.notification</field>
            <field name="arch" type="xml">
                <form string="Notification Sociale">
                    <header>
                        <button name="action_mark_read" string="Marquer comme lu" type="object" 
                                class="btn-primary" attrs="{'invisible': [('is_read', '=', True)]}"/>
                        <button name="action_mark_unread" string="Marquer comme non lu" type="object" 
                                class="btn-secondary" attrs="{'invisible': [('is_read', '=', False)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="title"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="user_id"/>
                                <field name="author_id"/>
                                <field name="is_read"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="read_date" readonly="1" attrs="{'invisible': [('read_date', '=', False)]}"/>
                                <field name="icon" readonly="1"/>
                                <field name="color" readonly="1"/>
                                <field name="action_url" readonly="1"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Message">
                                <field name="message" widget="text"/>
                            </page>
                            <page string="Liens" attrs="{'invisible': [('post_id', '=', False), ('comment_id', '=', False)]}">
                                <group>
                                    <field name="post_id" attrs="{'invisible': [('post_id', '=', False)]}"/>
                                    <field name="comment_id" attrs="{'invisible': [('comment_id', '=', False)]}"/>
                                </group>
                            </page>
                            <page string="Données supplémentaires" attrs="{'invisible': [('data', '=', False)]}">
                                <field name="data" widget="ace" options="{'mode': 'json'}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue kanban des notifications sociales -->
        <record id="view_social_notification_kanban" model="ir.ui.view">
            <field name="name">social.notification.kanban</field>
            <field name="model">social.notification</field>
            <field name="arch" type="xml">
                <kanban class="o_social_notification_kanban">
                    <field name="id"/>
                    <field name="title"/>
                    <field name="message"/>
                    <field name="type"/>
                    <field name="author_id"/>
                    <field name="create_date"/>
                    <field name="is_read"/>
                    <field name="icon"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_read.raw_value ? '' : 'o_notification_unread'}">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <i t-attf-class="fa #{record.icon.raw_value}" t-attf-style="color: #{record.color.raw_value}"/>
                                            <field name="title"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_tags_section">
                                            <span t-if="!record.is_read.raw_value" class="badge badge-pill badge-primary">Nouveau</span>
                                            <span class="badge badge-pill badge-secondary" t-esc="record.type.raw_value"/>
                                        </div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span><field name="message"/></span><br/>
                                                <span t-if="record.author_id.raw_value">De <field name="author_id"/></span>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <span><field name="create_date" widget="relative"/></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue recherche des notifications sociales -->
        <record id="view_social_notification_search" model="ir.ui.view">
            <field name="name">social.notification.search</field>
            <field name="model">social.notification</field>
            <field name="arch" type="xml">
                <search string="Rechercher Notifications">
                    <field name="title" string="Titre"/>
                    <field name="message" string="Message"/>
                    <field name="author_id" string="Auteur"/>
                    <filter string="Non lues" name="unread_notifications" domain="[('is_read', '=', False)]"/>
                    <filter string="Lues" name="read_notifications" domain="[('is_read', '=', True)]"/>
                    <separator/>
                    <filter string="Likes" name="like_notifications" domain="[('type', '=', 'like')]"/>
                    <filter string="Commentaires" name="comment_notifications" domain="[('type', '=', 'comment')]"/>
                    <filter string="Mentions" name="mention_notifications" domain="[('type', '=', 'mention')]"/>
                    <filter string="Suivis" name="follow_notifications" domain="[('type', 'in', ['follow_request', 'new_follower', 'follow_accepted'])]"/>
                    <filter string="Système" name="system_notifications" domain="[('type', '=', 'system')]"/>
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="Type" name="group_type" context="{'group_by': 'type'}"/>
                        <filter string="Auteur" name="group_author" context="{'group_by': 'author_id'}"/>
                        <filter string="Statut" name="group_read" context="{'group_by': 'is_read'}"/>
                        <filter string="Date de création" name="group_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action pour les notifications sociales -->
        <record id="action_social_notification" model="ir.actions.act_window">
            <field name="name">Notifications Sociales</field>
            <field name="res_model">social.notification</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_unread_notifications': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucune notification pour le moment !
                </p>
                <p>
                    Vos notifications apparaîtront ici lorsque d'autres utilisateurs
                    interagiront avec vos posts ou vous mentionneront.
                </p>
            </field>
        </record>

        <!-- Action pour marquer toutes les notifications comme lues -->
        <record id="action_mark_all_notifications_read" model="ir.actions.server">
            <field name="name">Marquer toutes comme lues</field>
            <field name="model_id" ref="model_social_notification"/>
            <field name="binding_model_id" ref="model_social_notification"/>
            <field name="state">code</field>
            <field name="code">
                records.action_mark_read()
            </field>
        </record>

    </data>
</odoo>