<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue minimale pour charger le modèle social.post -->
        <record id="view_social_post_tree_minimal" model="ir.ui.view">
            <field name="name">social.post.tree.minimal</field>
            <field name="model">social.post</field>
            <field name="arch" type="xml">
                <list string="Posts Sociaux">
                    <field name="content_preview"/>
                    <field name="author_id"/>
                    <field name="create_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire minimale -->
        <record id="view_social_post_form_minimal" model="ir.ui.view">
            <field name="name">social.post.form.minimal</field>
            <field name="model">social.post</field>
            <field name="arch" type="xml">
                <form string="Post Social">
                    <sheet>
                        <group>
                            <field name="content"/>
                            <field name="author_id"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action pour accéder aux posts -->
        <record id="action_social_post_minimal" model="ir.actions.act_window">
            <field name="name">Posts Sociaux</field>
            <field name="res_model">social.post</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_social_post_tree_minimal"/>
        </record>

        <!-- Menu minimal -->
        <menuitem id="menu_social_root" name="Social" sequence="10"/>
        <menuitem id="menu_social_posts" name="Posts" parent="menu_social_root" 
                  action="action_social_post_minimal" sequence="10"/>

    </data>
</odoo>