<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue liste des posts sociaux -->
        <record id="view_social_post_tree" model="ir.ui.view">
            <field name="name">social.post.tree</field>
            <field name="model">social.post</field>
            <field name="arch" type="xml">
                <list string="Posts Sociaux" multi_edit="1">
                    <field name="content_preview"/>
                    <field name="author_id"/>
                    <field name="visibility"/>
                    <field name="state" decoration-success="state == 'published'" decoration-muted="state == 'draft'" decoration-warning="state == 'archived'"/>
                    <field name="like_count"/>
                    <field name="comment_count"/>
                    <field name="share_count"/>
                    <field name="create_date"/>
                    <field name="is_pinned" optional="hide"/>
                    <field name="is_featured" optional="hide"/>
                </list>
            </field>
        </record>

        <!-- Vue formulaire des posts sociaux -->
        <record id="view_social_post_form" model="ir.ui.view">
            <field name="name">social.post.form</field>
            <field name="model">social.post</field>
            <field name="arch" type="xml">
                <form string="Post Social">
                    <header>
                        <button name="action_publish" string="Publier" type="object" 
                                class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_archive" string="Archiver" type="object" 
                                attrs="{'invisible': [('state', '!=', 'published')]}"/>
                        <button name="action_pin" string="√âpingler" type="object" 
                                attrs="{'invisible': [('is_pinned', '=', True)]}"/>
                        <button name="action_pin" string="D√©s√©pingler" type="object" 
                                attrs="{'invisible': [('is_pinned', '=', False)]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,published,archived"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_like" type="object" class="oe_stat_button" icon="fa-heart">
                                <field name="like_count" widget="statinfo" string="Likes"/>
                            </button>
                            <button name="action_view_comments" type="object" class="oe_stat_button" icon="fa-comment">
                                <field name="comment_count" widget="statinfo" string="Commentaires"/>
                            </button>
                            <button name="action_share" type="object" class="oe_stat_button" icon="fa-share">
                                <field name="share_count" widget="statinfo" string="Partages"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="content_preview" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="author_id" readonly="1"/>
                                <field name="visibility"/>
                                <field name="is_pinned"/>
                                <field name="is_featured"/>
                            </group>
                            <group>
                                <field name="create_date" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                                <field name="res_model" readonly="1" attrs="{'invisible': [('res_model', '=', False)]}"/>
                                <field name="res_id" readonly="1" attrs="{'invisible': [('res_id', '=', False)]}"/>
                                <field name="res_name" readonly="1" attrs="{'invisible': [('res_name', '=', False)]}"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Contenu">
                                <field name="content" widget="html"/>
                            </page>
                            <page string="M√©dias" attrs="{'invisible': [('has_media', '=', False)]}">
                                <field name="media_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="media_type"/>
                                        <field name="file_size"/>
                                        <field name="create_date"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Hashtags et Mentions">
                                <group>
                                    <field name="hashtag_ids" widget="many2many_tags"/>
                                    <field name="mention_ids" widget="many2many_tags"/>
                                </group>
                            </page>
                            <page string="Partage" attrs="{'invisible': [('is_shared', '=', False)]}">
                                <group>
                                    <field name="shared_post_id" readonly="1"/>
                                    <field name="shared_by_id" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue kanban des posts sociaux -->
        <record id="view_social_post_kanban" model="ir.ui.view">
            <field name="name">social.post.kanban</field>
            <field name="model">social.post</field>
            <field name="arch" type="xml">
                <kanban class="o_social_post_kanban">
                    <field name="id"/>
                    <field name="content_preview"/>
                    <field name="author_id"/>
                    <field name="create_date"/>
                    <field name="like_count"/>
                    <field name="comment_count"/>
                    <field name="share_count"/>
                    <field name="has_media"/>
                    <field name="is_pinned"/>
                    <field name="is_featured"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="content_preview"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_tags_section">
                                            <span t-if="record.is_pinned.raw_value" class="badge badge-pill badge-info">üìå √âpingl√©</span>
                                            <span t-if="record.is_featured.raw_value" class="badge badge-pill badge-warning">‚≠ê Mis en avant</span>
                                            <span t-if="record.has_media.raw_value" class="badge badge-pill badge-secondary">üìé M√©dias</span>
                                        </div>
                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <span>Par <field name="author_id"/></span><br/>
                                                <span><field name="create_date" widget="relative"/></span>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <span class="fa fa-heart text-danger"> <field name="like_count"/></span>
                                                <span class="fa fa-comment text-primary"> <field name="comment_count"/></span>
                                                <span class="fa fa-share text-success"> <field name="share_count"/></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue recherche des posts sociaux -->
        <record id="view_social_post_search" model="ir.ui.view">
            <field name="name">social.post.search</field>
            <field name="model">social.post</field>
            <field name="arch" type="xml">
                <search string="Rechercher Posts">
                    <field name="content" string="Contenu"/>
                    <field name="author_id" string="Auteur"/>
                    <field name="hashtag_ids" string="Hashtags"/>
                    <filter string="Mes Posts" name="my_posts" domain="[('author_id', '=', uid)]"/>
                    <filter string="Posts Publics" name="public_posts" domain="[('visibility', '=', 'public')]"/>
                    <filter string="Posts √âpingl√©s" name="pinned_posts" domain="[('is_pinned', '=', True)]"/>
                    <filter string="Posts avec M√©dias" name="media_posts" domain="[('has_media', '=', True)]"/>
                    <separator/>
                    <filter string="Brouillons" name="draft_posts" domain="[('state', '=', 'draft')]"/>
                    <filter string="Publi√©s" name="published_posts" domain="[('state', '=', 'published')]"/>
                    <filter string="Archiv√©s" name="archived_posts" domain="[('state', '=', 'archived')]"/>
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="Auteur" name="group_author" context="{'group_by': 'author_id'}"/>
                        <filter string="Visibilit√©" name="group_visibility" context="{'group_by': 'visibility'}"/>
                        <filter string="√âtat" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Date de cr√©ation" name="group_date" context="{'group_by': 'create_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action pour les posts sociaux -->
        <record id="action_social_post" model="ir.actions.act_window">
            <field name="name">Posts Sociaux</field>
            <field name="res_model">social.post</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_published_posts': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cr√©ez votre premier post social !
                </p>
                <p>
                    Partagez vos id√©es, actualit√©s et moments avec votre √©quipe.
                    Utilisez des hashtags pour organiser vos contenus et mentionnez
                    vos coll√®gues avec @nom_utilisateur.
                </p>
            </field>
        </record>

    </data>
</odoo>