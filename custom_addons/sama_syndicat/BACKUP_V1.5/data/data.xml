            <field name="telephone">+221 77 123 45 67</field>
            <field name="adresse">Rue 10, Plateau</field>
            <field name="ville">Dakar</field>
            <field name="employeur">Société SENEGAL TELECOM</field>
            <field name="poste_occupe">Technicien Réseau</field>
