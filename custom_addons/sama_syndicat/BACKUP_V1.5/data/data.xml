        <!-- Données de démonstration pour le syndicat -->

        <!-- Tableau de bord principal -->
        <record id="dashboard_principal" model="syndicat.dashboard">
            <field name="name">Tableau de Bord Principal</field>
        </record>

        <!-- Exemples d'adhérents -->
