<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue Liste des Assemblées -->
        <record id="view_syndicat_assemblee_list" model="ir.ui.view">
            <field name="name">syndicat.assemblee.list</field>
            <field name="model">syndicat.assemblee</field>
            <field name="arch" type="xml">
                <list string="Assemblées" multi_edit="1" sample="1">
                    <field name="reference"/>
                    <field name="name"/>
                    <field name="type_assemblee"/>
                    <field name="date_debut"/>
                    <field name="lieu"/>
                    <field name="president_assemblee_id"/>
                    <field name="nb_invites"/>
                    <field name="nb_presents"/>
                    <field name="taux_presence" widget="percentage"/>
                    <field name="quorum_atteint" widget="boolean_toggle"/>
                    <field name="statut" decoration-info="statut in ['planifiee', 'confirmee']" decoration-warning="statut == 'en_cours'" decoration-success="statut == 'terminee'" decoration-muted="statut in ['reportee', 'annulee']"/>
                </list>
            </field>
        </record>

        <!-- Vue Kanban des Assemblées -->
        <record id="view_syndicat_assemblee_kanban" model="ir.ui.view">
            <field name="name">syndicat.assemblee.kanban</field>
            <field name="model">syndicat.assemblee</field>
            <field name="arch" type="xml">
                <kanban default_group_by="statut" class="o_kanban_mobile" sample="1">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="type_assemblee"/>
                    <field name="date_debut"/>
                    <field name="lieu"/>
                    <field name="statut"/>
                    <field name="nb_invites"/>
                    <field name="nb_presents"/>
                    <field name="taux_presence"/>
                    <field name="quorum_atteint"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <div class="o_kanban_record_subtitle">
                                                <field name="reference"/> - <field name="type_assemblee"/>
                                            </div>
                                        </div>
                                        <div class="o_kanban_manage_button_section">
                                            <a class="o_kanban_manage_toggle_button" href="#">
                                                <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="row">
                                            <div class="col-6">
                                                <i class="fa fa-calendar" title="Date"/> <field name="date_debut" widget="date"/>
                                            </div>
                                            <div class="col-6">
                                                <i class="fa fa-clock-o" title="Heure"/> <field name="date_debut" widget="datetime" options="{'format': 'HH:mm'}"/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12">
                                                <i class="fa fa-map-marker" title="Lieu"/> <field name="lieu"/>
                                            </div>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-6">
                                                <span class="badge badge-pill badge-info">
                                                    <field name="nb_invites"/> invités
                                                </span>
                                            </div>
                                            <div class="col-6">
                                                <span class="badge badge-pill badge-success" t-if="record.quorum_atteint.raw_value">
                                                    Quorum OK
                                                </span>
                                                <span class="badge badge-pill badge-warning" t-if="!record.quorum_atteint.raw_value">
                                                    Pas de quorum
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="president_assemblee_id" widget="many2one_avatar_user"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="taux_presence" widget="percentage"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Calendrier des Assemblées -->
        <record id="view_syndicat_assemblee_calendar" model="ir.ui.view">
            <field name="name">syndicat.assemblee.calendar</field>
            <field name="model">syndicat.assemblee</field>
            <field name="arch" type="xml">
                <calendar string="Calendrier des Assemblées" date_start="date_debut" date_stop="date_fin" color="type_assemblee">
                    <field name="name"/>
                    <field name="lieu"/>
                    <field name="type_assemblee"/>
                    <field name="statut"/>
                </calendar>
            </field>
        </record>

        <!-- Vue Formulaire des Assemblées -->
        <record id="view_syndicat_assemblee_form" model="ir.ui.view">
            <field name="name">syndicat.assemblee.form</field>
            <field name="model">syndicat.assemblee</field>
            <field name="arch" type="xml">
                <form string="Assemblée">
                    <header>
                        <button name="action_confirmer" string="Confirmer" type="object" class="btn-primary" invisible="statut != 'planifiee'"/>
                        <button name="action_commencer" string="Commencer" type="object" class="btn-success" invisible="statut not in ['planifiee', 'confirmee']"/>
                        <button name="action_suspendre" string="Suspendre" type="object" class="btn-warning" invisible="statut != 'en_cours'"/>
                        <button name="action_reprendre" string="Reprendre" type="object" class="btn-info" invisible="statut != 'suspendue'"/>
                        <button name="action_terminer" string="Terminer" type="object" class="btn-success" invisible="statut not in ['en_cours', 'suspendue']"/>
                        <button name="action_reporter" string="Reporter" type="object" class="btn-warning" invisible="statut not in ['planifiee', 'confirmee']"/>
                        <button name="action_annuler" string="Annuler" type="object" class="btn-danger" invisible="statut not in ['planifiee', 'confirmee']"/>
                        <button name="action_send_reminder" string="Envoyer Rappel" type="object" class="btn-info" invisible="statut not in ['confirmee']"/>
                        <field name="statut" widget="statusbar" statusbar_visible="planifiee,confirmee,en_cours,terminee"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_votes" icon="fa-check-square-o">
                                <field string="Votes" name="nb_votes" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_participants" icon="fa-users">
                                <field string="Participants" name="nb_presents" widget="statinfo"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Inactif" bg_color="bg-danger" invisible="active"/>
                        <div class="oe_title">
                            <h1>
                                <field name="reference" readonly="1"/>
                            </h1>
                            <h2>
                                <field name="name" required="1"/>
                            </h2>
                        </div>
                        <group>
                            <group name="basic_info" string="Informations de Base">
                                <field name="type_assemblee" required="1"/>
                                <field name="date_debut" required="1"/>
                                <field name="date_fin"/>
                                <field name="duree_prevue" readonly="1" widget="float_time"/>
                                <field name="duree_reelle" readonly="1" widget="float_time" invisible="statut != 'terminee'"/>
                            </group>
                            <group name="location_info" string="Lieu et Organisation">
                                <field name="lieu" required="1"/>
                                <field name="adresse_complete"/>
                                <field name="salle"/>
                                <field name="capacite_max"/>
                                <field name="president_assemblee_id"/>
                                <field name="secretaire_assemblee_id"/>
                            </group>
                        </group>
                        <group>
                            <group name="participation_info" string="Participation">
                                <field name="nb_invites" readonly="1"/>
                                <field name="nb_presents" readonly="1"/>
                                <field name="taux_presence" readonly="1" widget="percentage"/>
                                <field name="quorum_requis" readonly="1"/>
                                <field name="quorum_atteint" readonly="1" widget="boolean"/>
                            </group>
                            <group name="communication_info" string="Communication">
                                <field name="convocation_envoyee" readonly="1"/>
                                <field name="date_envoi_convocation" readonly="1"/>
                                <field name="rappel_envoye" readonly="1"/>
                                <field name="date_envoi_rappel" readonly="1"/>
                                <field name="diffusion_publique"/>
                                <field name="lien_streaming" invisible="not diffusion_publique"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Ordre du Jour" name="ordre_du_jour">
                                <field name="ordre_du_jour" widget="html"/>
                            </page>
                            <page string="Objectifs" name="objectifs">
                                <field name="objectifs" widget="html"/>
                            </page>
                            <page string="Participants" name="participants">
                                <group>
                                    <group string="Invités">
                                        <field name="adherent_invites_ids" nolabel="1" widget="many2many_tags"/>
                                    </group>
                                    <group string="Présents">
                                        <field name="adherent_presents_ids" nolabel="1" widget="many2many_tags"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Absents">
                                        <field name="adherent_absents_ids" nolabel="1" widget="many2many_tags"/>
                                    </group>
                                    <group string="Excusés">
                                        <field name="adherent_excuses_ids" nolabel="1" widget="many2many_tags"/>
                                    </group>
                                </group>
                                <group string="Invités Externes">
                                    <field name="invites_externes" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Revendications" name="revendications">
                                <field name="revendication_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="type_revendication"/>
                                        <field name="priorite"/>
                                        <field name="statut"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Actions Planifiées" name="actions">
                                <field name="action_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="type_action"/>
                                        <field name="date_debut"/>
                                        <field name="statut"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Votes" name="votes">
                                <field name="votes_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="type_vote"/>
                                        <field name="nb_pour"/>
                                        <field name="nb_contre"/>
                                        <field name="nb_abstentions"/>
                                        <field name="resultat" decoration-success="resultat == 'adopte'" decoration-danger="resultat == 'rejete'"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Résumé" name="resume" invisible="statut not in ['terminee']">
                                <group>
                                    <field name="resume_assemblee" widget="html"/>
                                </group>
                            </page>
                            <page string="Procès-Verbal" name="pv" invisible="statut not in ['terminee']">
                                <group>
                                    <field name="proces_verbal" widget="html"/>
                                </group>
                            </page>
                            <page string="Décisions" name="decisions" invisible="statut not in ['terminee']">
                                <group>
                                    <field name="decisions_prises" widget="html"/>
                                </group>
                            </page>
                            <page string="Résolutions" name="resolutions" invisible="statut not in ['terminee']">
                                <group>
                                    <field name="resolutions_adoptees" widget="html"/>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes_internes" placeholder="Notes internes pour l'organisation..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Recherche des Assemblées -->
        <record id="view_syndicat_assemblee_search" model="ir.ui.view">
            <field name="name">syndicat.assemblee.search</field>
            <field name="model">syndicat.assemblee</field>
            <field name="arch" type="xml">
                <search string="Rechercher Assemblées">
                    <field name="name" string="Nom" filter_domain="['|', ('name', 'ilike', self), ('reference', 'ilike', self)]"/>
                    <field name="lieu"/>
                    <field name="president_assemblee_id"/>
                    <field name="type_assemblee"/>
                    <separator/>
                    <filter string="À venir" name="a_venir" domain="[('date_debut', '>', datetime.datetime.now())]"/>
                    <filter string="En cours" name="en_cours" domain="[('statut', '=', 'en_cours')]"/>
                    <filter string="Terminées" name="terminees" domain="[('statut', '=', 'terminee')]"/>
                    <filter string="Quorum atteint" name="quorum_ok" domain="[('quorum_atteint', '=', True)]"/>
                    <filter string="Diffusion publique" name="publique" domain="[('diffusion_publique', '=', True)]"/>
                    <separator/>
                    <filter string="Ce mois" name="ce_mois" domain="[('date_debut', '>=', datetime.datetime.now().replace(day=1)), ('date_debut', '&lt;', (datetime.datetime.now().replace(day=1) + datetime.timedelta(days=32)).replace(day=1))]"/>
                    <filter string="Cette semaine" name="cette_semaine" domain="[('date_debut', '>=', datetime.datetime.now() - datetime.timedelta(days=datetime.datetime.now().weekday())), ('date_debut', '&lt;', datetime.datetime.now() + datetime.timedelta(days=7-datetime.datetime.now().weekday()))]"/>
                    <separator/>
                    <filter string="Archivées" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Grouper par">
                        <filter string="Statut" name="group_statut" context="{'group_by': 'statut'}"/>
                        <filter string="Type" name="group_type" context="{'group_by': 'type_assemblee'}"/>
                        <filter string="Président" name="group_president" context="{'group_by': 'president_assemblee_id'}"/>
                        <filter string="Mois" name="group_mois" context="{'group_by': 'date_debut:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vue Graphique des Assemblées -->
        <record id="view_syndicat_assemblee_graph" model="ir.ui.view">
            <field name="name">syndicat.assemblee.graph</field>
            <field name="model">syndicat.assemblee</field>
            <field name="arch" type="xml">
                <graph string="Statistiques Assemblées" type="bar" sample="1">
                    <field name="type_assemblee" type="row"/>
                    <field name="statut" type="col"/>
                    <field name="taux_presence" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Vue Pivot des Assemblées -->
        <record id="view_syndicat_assemblee_pivot" model="ir.ui.view">
            <field name="name">syndicat.assemblee.pivot</field>
            <field name="model">syndicat.assemblee</field>
            <field name="arch" type="xml">
                <pivot string="Analyse Assemblées" sample="1">
                    <field name="type_assemblee" type="row"/>
                    <field name="statut" type="col"/>
                    <field name="taux_presence" type="measure"/>
                    <field name="duree_reelle" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Action pour les Assemblées -->
        <record id="action_syndicat_assemblee" model="ir.actions.act_window">
            <field name="name">Assemblées</field>
            <field name="res_model">syndicat.assemblee</field>
            <field name="view_mode">kanban,calendar,list,form,graph,pivot</field>
            <field name="context">{'search_default_a_venir': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Planifier votre première assemblée
                </p>
                <p>
                    Organisez vos assemblées générales, réunions de bureau et commissions avec un suivi complet des participants et des décisions.
                </p>
            </field>
        </record>

    </data>
</odoo>