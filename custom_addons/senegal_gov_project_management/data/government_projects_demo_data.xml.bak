<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ================================================ -->
        <!-- PROJETS GOUVERNEMENTAUX - DÉMONSTRATION         -->
        <!-- ================================================ -->

        <!-- Projets Éducation -->
        <record id="project_education_reform" model="government.project">
            <field name="name">Réforme du Système Éducatif Sénégalais</field>
            <field name="description">Mise en œuvre d'une réforme globale du système éducatif pour améliorer la qualité de l'enseignement de base et l'adéquation formation-emploi</field>
            <field name="start_date">2025-01-15</field>
            <field name="end_date">2027-12-31</field>
            <field name="status">validated</field>
            <field name="priority">3</field>
            <field name="strategic_objective_id" ref="objective_quality_education"/>
            <field name="ministry_id" ref="ministry_education"/>
            <field name="budget_id" ref="budget_education_2025"/>
        </record>

        <record id="project_digital_schools" model="government.project">
            <field name="name">Écoles Numériques du Sénégal</field>
            <field name="description">Équipement de 5000 écoles primaires et secondaires en matériel informatique et connexion Internet haut débit</field>
            <field name="start_date">2025-03-01</field>
            <field name="end_date">2026-12-31</field>
            <field name="status">validated</field>
            <field name="priority">2</field>
            <field name="strategic_objective_id" ref="objective_digital_skills"/>
            <field name="ministry_id" ref="ministry_education"/>
        </record>

        <record id="project_construction_ecoles_rurales" model="government.project">
            <field name="name">Construction d'Écoles Rurales</field>
            <field name="description">Construction de 100 nouvelles écoles dans les zones rurales pour améliorer l'accès à l'éducation de base.</field>
            <field name="start_date">2025-05-01</field>
            <field name="end_date">2027-04-30</field>
            <field name="status">draft</field>
            <field name="priority">2</field>
            <field name="strategic_objective_id" ref="objective_quality_education"/>
            <field name="ministry_id" ref="ministry_education"/>
        </record>

        <!-- Projets Santé -->
        <record id="project_universal_health_coverage" model="government.project">
            <field name="name">Couverture Sanitaire Universelle 2025</field>
            <field name="description">Extension de la couverture maladie universelle à l'ensemble de la population sénégalaise avec un accent sur les zones rurales</field>
            <field name="start_date">2025-01-01</field>
            <field name="end_date">2025-12-31</field>
            <field name="status">in_progress</field>
            <field name="priority">3</field>
            <field name="strategic_objective_id" ref="objective_universal_health"/>
            <field name="ministry_id" ref="ministry_health"/>
            <field name="budget_id" ref="budget_health_2025"/>
        </record>

        <record id="project_health_infrastructure" model="government.project">
            <field name="name">Modernisation des Infrastructures Sanitaires</field>
            <field name="description">Construction et équipement de 20 nouveaux hôpitaux régionaux et 150 centres de santé communautaires</field>
            <field name="start_date">2025-06-01</field>
            <field name="end_date">2028-05-31</field>
            <field name="status">draft</field>
            <field name="priority">2</field>
            <field name="strategic_objective_id" ref="objective_health_infrastructure"/>
            <field name="ministry_id" ref="ministry_health"/>
        </record>

        <!-- Projets Agriculture -->
        <record id="project_food_self_sufficiency" model="government.project">
            <field name="name">Programme d'Autosuffisance en Riz</field>
            <field name="description">Développement de la riziculture nationale pour atteindre 80% d'autosuffisance en riz d'ici 2030</field>
            <field name="start_date">2025-04-01</field>
            <field name="end_date">2030-03-31</field>
            <field name="status">validated</field>
            <field name="priority">3</field>
            <field name="strategic_objective_id" ref="objective_food_security"/>
            <field name="ministry_id" ref="ministry_agriculture"/>
            <field name="budget_id" ref="budget_agriculture_2025"/>
        </record>

        <record id="project_agricultural_mechanization" model="government.project">
            <field name="name">Mécanisation de l'Agriculture Sénégalaise</field>
            <field name="description">Acquisition et distribution de 2000 tracteurs et équipements agricoles modernes aux coopératives agricoles</field>
            <field name="start_date">2025-02-01</field>
            <field name="end_date">2027-01-31</field>
            <field name="status">in_progress</field>
            <field name="priority">2</field>
            <field name="strategic_objective_id" ref="objective_agricultural_modernization"/>
            <field name="ministry_id" ref="ministry_agriculture"/>
        </record>

        <!-- Projets Emploi des Jeunes -->
        <record id="project_youth_entrepreneurship" model="government.project">
            <field name="name">Fonds d'Appui à l'Entrepreneuriat des Jeunes</field>
            <field name="description">Création d'un fonds de 100 milliards FCFA pour financer les projets d'entreprise portés par les jeunes de 18 à 35 ans</field>
            <field name="start_date">2025-01-01</field>
            <field name="end_date">2027-12-31</field>
            <field name="status">validated</field>
            <field name="priority">3</field>
            <field name="strategic_objective_id" ref="objective_youth_entrepreneurship"/>
            <field name="ministry_id" ref="ministry_employment"/>
        </record>

        <record id="project_youth_training" model="government.project">
            <field name="name">Programme National de Formation des Jeunes</field>
            <field name="description">Formation de 50,000 jeunes dans les métiers porteurs (numérique, BTP, agriculture moderne, énergies renouvelables)</field>
            <field name="start_date">2025-09-01</field>
            <field name="end_date">2027-08-31</field>
            <field name="status">draft</field>
            <field name="priority">2</field>
            <field name="strategic_objective_id" ref="objective_youth_employment"/>
            <field name="ministry_id" ref="ministry_employment"/>
        </record>

        <!-- Projets Industrie -->
        <record id="project_industrial_parks" model="government.project">
            <field name="name">Zones Économiques Spéciales du Sénégal</field>
            <field name="description">Création de 5 zones économiques spéciales modernes dans les régions de Dakar, Thiès, Saint-Louis, Kaolack et Ziguinchor</field>
            <field name="start_date">2025-07-01</field>
            <field name="end_date">2028-06-30</field>
            <field name="status">validated</field>
            <field name="priority">3</field>
            <field name="strategic_objective_id" ref="objective_industrial_parks"/>
            <field name="ministry_id" ref="ministry_industry"/>
        </record>

        <record id="project_local_content" model="government.project">
            <field name="name">Promotion du Contenu Local dans l'Industrie</field>
            <field name="description">Programme de substitution aux importations et d'utilisation des matières premières locales dans les industries manufacturières</field>
            <field name="start_date">2025-05-01</field>
            <field name="end_date">2027-04-30</field>
            <field name="status">draft</field>
            <field name="priority">2</field>
            <field name="strategic_objective_id" ref="objective_local_content"/>
            <field name="ministry_id" ref="ministry_industry"/>
        </record>

        <!-- Projets Numérique -->
        <record id="project_fiber_optic_network" model="government.project">
            <field name="name">Déploiement de la Fibre Optique Nationale</field>
            <field name="description">Extension du réseau national de fibre optique pour couvrir 100% du territoire sénégalais avec du haut débit</field>
            <field name="start_date">2025-01-15</field>
            <field name="end_date">2026-12-31</field>
            <field name="status">in_progress</field>
            <field name="priority">3</field>
            <field name="strategic_objective_id" ref="objective_digital_infrastructure"/>
            <field name="ministry_id" ref="ministry_digital"/>
        </record>

        <record id="project_e_government" model="government.project">
            <field name="name">Plateforme Nationale d'e-Gouvernement</field>
            <field name="description">Digitalisation de tous les services publics avec une plateforme unique d'accès aux démarches administratives</field>
            <field name="start_date">2025-03-01</field>
            <field name="end_date">2026-08-31</field>
            <field name="status">validated</field>
            <field name="priority">3</field>
            <field name="strategic_objective_id" ref="objective_digital_services"/>
            <field name="ministry_id" ref="ministry_digital"/>
        </record>

        <!-- Projets Infrastructure -->
        <record id="project_road_infrastructure" model="government.project">
            <field name="name">Programme National de Désenclavement</field>
            <field name="description">Construction et réhabilitation de 2000 km de routes rurales pour désenclaver les zones reculées</field>
            <field name="start_date">2025-04-01</field>
            <field name="end_date">2027-03-31</field>
            <field name="status">validated</field>
            <field name="priority">2</field>
            <field name="strategic_objective_id" ref="objective_quality_education"/>
            <field name="ministry_id" ref="ministry_infrastructure"/>
        </record>

        <!-- Projets Énergie -->
        <record id="project_renewable_energy" model="government.project">
            <field name="name">Mix Énergétique 2030 - Énergies Renouvelables</field>
            <field name="description">Installation de 1000 MW de capacité solaire et éolienne pour porter la part des énergies renouvelables à 30% du mix énergétique</field>
            <field name="start_date">2025-02-01</field>
            <field name="end_date">2029-12-31</field>
            <field name="status">draft</field>
            <field name="priority">2</field>
            <field name="strategic_objective_id" ref="objective_digital_infrastructure"/>
            <field name="ministry_id" ref="ministry_mines_energy"/>
        </record>

        <!-- Projets Eau et Assainissement -->
        <record id="project_water_access" model="government.project">
            <field name="name">Accès Universel à l'Eau Potable</field>
            <field name="description">Extension des réseaux d'adduction d'eau pour porter le taux d'accès à l'eau potable à 100% en milieu urbain et 90% en milieu rural</field>
            <field name="start_date">2025-06-01</field>
            <field name="end_date">2028-05-31</field>
            <field name="status">validated</field>
            <field name="priority">3</field>
            <field name="strategic_objective_id" ref="objective_universal_health"/>
            <field name="ministry_id" ref="ministry_water"/>
        </record>

        <!-- Projets Transversaux -->
        <record id="project_smart_cities" model="government.project">
            <field name="name">Villes Intelligentes du Sénégal</field>
            <field name="description">Transformation numérique des grandes villes sénégalaises (Dakar, Thiès, Saint-Louis) avec des solutions IoT et de gestion urbaine intelligente</field>
            <field name="start_date">2025-08-01</field>
            <field name="end_date">2027-07-31</field>
            <field name="status">draft</field>
            <field name="priority">2</field>
            <field name="strategic_objective_id" ref="objective_digital_services"/>
            <field name="ministry_id" ref="ministry_urban_planning"/>
        </record>

    </data>
</odoo>