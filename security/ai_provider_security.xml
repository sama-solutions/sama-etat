<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security rules for AI Provider Configuration -->
    <data noupdate="1">
        
        <!-- Allow users to read/write their own OAuth tokens -->
        <record id="ai_provider_config_oauth_rule" model="ir.rule">
            <field name="name">AI Provider Config: User OAuth Access</field>
            <field name="model_id" ref="model_ai_provider_config"/>
            <field name="domain_force">
                [('create_uid', '=', user.id)]
            </field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
        
        <!-- Restrict access to system administrators for all operations -->
        <record id="ai_provider_config_admin_rule" model="ir.rule">
            <field name="name">AI Provider Config: Admin Full Access</field>
            <field name="model_id" ref="model_ai_provider_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
        
    </data>
</odoo>
