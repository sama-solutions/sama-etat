<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Action for OAuth Dashboard -->
    <record id="action_ai_oauth_dashboard_client" model="ir.actions.client">
        <field name="name">Tableau de bord OAuth</field>
        <field name="tag">iframe</field>
        <field name="params" eval="{'src': '/ai/oauth/dashboard'}"/>
    </record>
    
    <!-- Main Menu Item - Top Level -->
    <menuitem id="menu_ai_providers_main" 
             name="Fournisseur d'IA" 
             parent="website.main_menu" 
             action="action_ai_oauth_dashboard_client"
             sequence="99"
             groups="base.group_system"/>
    
    <!-- Remove the old menu item under SAMA ETAT if it exists -->
    <delete id="sama_etat.menu_ai_providers" model="ir.ui.menu"/>
</odoo>
