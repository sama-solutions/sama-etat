<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="public_axis_page" name="Axe Stratégique - Page Publique">
            <t t-call="sama_etat.modern_public_layout">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="senegal-card">
                            <div class="card-header bg-primary text-white">
                                <h2 class="card-title mb-0">
                                    <i class="fa fa-compass me-2"/>
                                    <t t-esc="axis.get('name', '')" t-options='{"widget": "text"}'/>
                                </h2>
                            </div>
                            <div class="card-body">
                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <strong>Code :</strong> <span t-field="axis.code"/><br/>
                                        <strong>Pilier Stratégique :</strong>
                                        <span t-if="axis.pillar_id">
                                            <a t-att-href="'/senegal2050/pillar/' + axis.pillar_id[0]" class="text-decoration-none">
                                                <span t-field="axis.pillar_id[1]"/>
                                            </a>
                                        </span>
                                        <span t-else="">Non défini</span>
                                    </div>
                                </div>

                                <div t-if="axis.description">
                                    <h4>Description</h4>
                                    <p t-field="axis.description" class="lead"/>
                                </div>

                                <div t-if="axis.objective_ids">
                                    <h4>Objectifs Liés</h4>
                                    <ul>
                                        <li t-foreach="axis.objective_ids" t-as="objective" t-key="objective.id">
                                            <a t-att-href="'/senegal2050/objective/' + objective.id">
                                                <span t-esc="objective.name"/>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="qr-code-container">
                            <h5>Partager cet Axe</h5>
                            <img t-att-src="'data:image/png;base64,' + qr_code" 
                                 alt="QR Code de l'axe" class="img-fluid mb-3" style="max-width: 200px;"/>
                            <p class="small text-muted mb-3">Scannez ce code QR pour partager</p>
                            <input type="text" class="form-control" 
                                   t-att-value="axis_url" readonly="readonly"
                                   onclick="this.select();"/>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
